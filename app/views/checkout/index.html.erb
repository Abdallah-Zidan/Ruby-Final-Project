<!-- Shopping Cart Section Begin -->
<section class="checkout-section spad">
    <div class="container">
        <% if flash.alert %>
            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                <%= flash.alert %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% elsif flash.notice %>
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <%= flash.notice %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% end %>
        <form method="POST" action="order" class="checkout-form">
            <%= csrf_meta_tags %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="row">
                <div class="col-lg-6">
                    <h4>Biiling Details</h4>
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="address">Address<span>*</span></label>
                            <input type="text" name="order[address]" id="address" class="street-first">
                        </div>
                        <div class="col-lg-12">
                            <label for="postcode">Postcode (optional)</label>
                            <input type="text" name="order[postcode]" id="postcode">
                        </div>
                        <div class="col-lg-12">
                            <label for="city">City<span>*</span></label>
                            <input type="text" name="order[city]" id="city">
                        </div>
                        <div class="col-lg-12">
                            <label for="phone">Phone<span>*</span></label>
                            <input type="text" name="order[phone]" id="phone">
                        </div>
                        <input type="hidden" name="order[cart]" value="[]">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="place-order">
                        <h4>Your Order</h4>
                        <div class="order-total">
                            <ul class="order-table">
                                <li>Product <span>Total</span></li>
                            </ul>
                            <div class="order-btn">
                                <button type="submit" class="site-btn place-btn">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Shopping Cart Section End -->

<% content_for :js do %>
	<script src="/js/checkout.js"></script>
<% end %>