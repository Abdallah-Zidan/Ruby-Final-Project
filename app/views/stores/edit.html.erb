<%= render 'stores/layouts/header' %>
   <div class="main">

        <div class="XYZ">
            <div class="booking-content">
               <div class="booking-image">
                    <img class="booking-img" src="/img/form6.jpg" alt="Booking Image">
                </div>
                <div class="booking-form">

   
    <%= form_with model: @product, url: store_path(@product.id), id:"booking-form", local: true do |form| %>
           <% if @product.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@product.errors.count, "error") %> prohibited
            this product from being saved:
        </h2>
        <ul>
            <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
         <% end %>
                       <h2>Edit Product</h2>
                        <div class="form-group form-input">
                            <%= form.text_field :title%>
                            <label for="name" class="form-label">Title</label>
                        </div>
                        <div class="form-group form-input">
                              <%= form.text_field :price %>
                            <label for="phone" class="form-label">Price</label>
                        </div>
                         <div class="form-group form-input">
                              <%= form.text_field :quantity%>
                            <label for="phone" class="form-label">Quantity</label>
                        </div>
                         <div class="form-group form-input">
                        <%= form.collection_select :brand_id, Brand.all, :id, :name %>
                         <label class="form-label">Brand</label>
    
                        </div>

                         <div class="form-group form-input">
                        <%= form.collection_select :category_id, Category.all, :id, :name %>
                          <label class="form-label">Category</label>

                        </div>

                          <div class="form-group form-input">
                            <%= form.text_area :description%>
                                <label class="form-label">Description</label>

                        </div>

                          <div class="form-group form-input">
                                <%= form.file_field :path, multiple: true, name:"image[path][]" %>
                                  <label class="form-label">Image</label>

                        </div>
                       

                        <div class="form-submit">
                            <%= form.submit %>
                        </div>
                </div>
            </div>
        </div>
    <% end %>
